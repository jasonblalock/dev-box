{
  "java": {
    "install_flavor": "oracle",
    "jdk_version": "8",
    "oracle": {"accept_oracle_download_terms": true}
  },
  "elasticsearch": {
    "allocated_memory": "1024m",
    "cluster": {"name": "answers"},
    "custom_config": {"script.disable_dynamic": true},
    "version": "1.3.6"
  },
  "nodejs": {
    "install_method": "binary"
    },
  "postgresql": {
    "version": "9.3",
    "apt_distribution": "trusty",
    "conf": {
      "listen_addresses": "*",
      "log_error_verbosity": "verbose",
      "log_connections": "on",
      "log_min_error_statement": "info",
      "log_min_duration_statement": "0"
    },
    "pg_hba": [
      { "type": "local", "db": "all", "user": "postgres", "addr": "", "method": "ident"},
      { "type": "host", "db": "all", "user": "all", "addr": "::1/128", "method": "md5"},
      { "type": "host", "db": "all", "user": "all", "addr": "0.0.0.0/0", "method": "md5"},
      { "type": "local", "db": "all", "user": "all", "addr": "", "method": "ident"}
    ]
  },

  "run_list": [
    "recipe[apt]",
    "recipe[build-essential]",
    "recipe[curl]",
    "recipe[libqt4::dev]",
    "recipe[libreoffice]",
    "recipe[libsasl2_dev]",
    "recipe[memcached]",
    "recipe[nodejs]",
    "recipe[openssl]",
    "recipe[passenger_nginx]",
    "recipe[phantomjs]",
    "recipe[postgresql::client]",
    "recipe[postgresql::server]",
    "recipe[python]",
    "recipe[ruby_dev]",
    "recipe[wordnet]",
    "recipe[java]",
    "recipe[java::default_java_symlink]",
    "recipe[elasticsearch]"
  ]
}
